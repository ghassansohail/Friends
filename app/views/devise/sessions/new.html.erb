

<div class="mb-3 container-fluid bg-light p-5" style="display: grid;
place-items: center;">

<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <form>
    <div class="mb-3">
      <%= f.label :email %><br />
      <%= f.email_field :email, class:"form-control", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field form-group">
      <%= f.label :password %><br />
      <%= f.password_field :password, class:"form-control", autocomplete: "current-password" %>
    </div>
<br>
    <% if devise_mapping.rememberable? %>
      <div class="field form-check">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <br><br>
    <div class="actions ">
      <%= f.submit "Log in", class:"btn btn-success form-control" %>
    </div>
    <br>
    <br>
  
  </form>
<% end %>

<%= render "devise/shared/links" %>
</div>